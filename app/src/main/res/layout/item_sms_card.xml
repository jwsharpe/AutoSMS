<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:onClick="viewMessage"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/accent_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/card_accent_circle"
        android:backgroundTint="@color/colorAccent"/>

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/card_phone"
        android:maxLength="30"
        android:text="@string/card_title"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title"/>

    <TextView
        android:id="@+id/card_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_title"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/accent_shape"
        android:text="@string/card_phone"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle"/>

    <Button
        android:id="@+id/toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/splash_background"
        android:elevation="0dp"
        android:onClick="toggleService"
        android:text="On"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:textColor="@color/colorAccent"/>


</RelativeLayout>